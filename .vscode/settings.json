{
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.debug.settings.onBuildFailureProceed": true,
    "java.project.sourcePaths": [
        "src/main/java"
    ],
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "args": [
                "-NoExit",
                "-Command",
                "chcp 65001"
            ]
        }
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "java.project.outputPath": "target/classes",
    "java.project.referencedLibraries": [
        "lib/**/*.jar"
    ],
    "java.jdt.ls.vmargs": "-Dfile.encoding=UTF8 -XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx4G -Xms100m -Xlog:disable",
    "java.debug.settings.vmArgs": "-Dfile.encoding=UTF-8",
    "java.test.config": {
        "vmArgs": ["-Dfile.encoding=UTF-8"]
    }
}